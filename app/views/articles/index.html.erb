<div class="page-header">
  <h1>Articles</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Id</th>
      <th>Title</th>
      <th>Body</th>
      <th>Created at</th>
      <th class='actions'>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= link_to article.id, article_path(article) %></td>
        <td><%= article.title %></td>
        <td><%= article.body %></td>
        <td><%= l article.created_at %></td>
        <td><%= link_to 'Show', article, class: "btn btn-default btn-xs" %>
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-default btn-xs" %>
            <%= link_to 'Delete', article, method: :delete, data: { confirm: 'Are you sure?' }, 
                      class: "btn btn-xs btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New', new_article_path, class: 'btn btn-primary' %>
